# Fullon Master API - Environment Configuration
# Copy this file to .env and update with your values

# ==========================================
# API Configuration
# ==========================================
API_TITLE="Fullon Master API"
API_VERSION="1.0.0"
API_PREFIX="/api/v1"

# ==========================================
# JWT Authentication
# ==========================================
# REQUIRED: Generate a secure random secret key
# Example: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ==========================================
# CORS Configuration
# ==========================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ==========================================
# Logging Configuration (fullon_log)
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=beautiful
LOG_CONSOLE=true
LOG_COLORS=true
# Optional: LOG_FILE_PATH=/var/log/fullon/master_api.log
# Optional: LOG_ROTATION=100 MB
# Optional: LOG_RETENTION=7 days

# ==========================================
# Server Configuration
# ==========================================
HOST=0.0.0.0
PORT=8000
RELOAD=false

# ==========================================
# Database Configuration (fullon_orm)
# ==========================================
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=fullon2
DB_HOST=localhost
DB_PORT=5432

# ==========================================
# Redis Cache Configuration (fullon_cache)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# ==========================================
# Cache Configuration (dogpile.cache)
# ==========================================
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_DB=0

# ==========================================
# Performance Configuration
# ==========================================
UVLOOP_ENABLED=true
